#!/usr/bin/env python3
"""Direct entry point for New Relic MCP server."""

import sys
import os
import asyncio

# Add the src directory to the path
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'src'))

from newrelic_mcp.server import NewRelicMCPServer


async def main():
    """Main entry point."""
    server = NewRelicMCPServer()
    await server.run()


if __name__ == "__main__":
    asyncio.run(main())